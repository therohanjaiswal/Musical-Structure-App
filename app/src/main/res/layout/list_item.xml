<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/list_song_image"
        android:layout_width="@dimen/song_list_image_width"
        android:layout_height="@dimen/song_list_image_height"
        tools:src="@drawable/kabir_singh"
        tools:ignore="ContentDescription"
        android:padding="@dimen/song__list_image_padding"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/song_list_padding_start_end"
        android:paddingEnd="@dimen/song_list_padding_start_end">
        <TextView
            android:id="@+id/list_song_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ec407a"
            tools:text="Tujhe Kitna Chahne Lage Hum"/>
        <TextView
            android:id="@+id/list_song_artist"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="Jubin Nautiyal"/>
    </LinearLayout>

</LinearLayout>